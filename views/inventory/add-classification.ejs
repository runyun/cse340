<h1>
    <%= title %>
</h1>

<% if (errors) { %>
    <ul class="notice">
    <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
    <%  }) %>
   </ul>
<% } %>


<form id="classificationForm" action="/inv/add-classification" method="post">
    <label for="classification_name">Classification name</label>
    <input type="text" name="classification_name" id="classification_name" required pattern="[a-zA-Z]+$" value="<%= locals.classification_name %>">

    <input type="submit" value="Add Classification">
</form>
